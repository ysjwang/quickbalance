<div id="accounts-overview-table">
  <table class="table table-striped">
    <thead>
      <th>Account</th>
      <th>Debit Shorthand</th>
      <th>Credit Shorthand</th>
    </thead>

    <tbody>
      <% accounts.each do |account| %>
      <tr>
        <td><%= link_to account.name, account %></td>
        <td><%= account.debit_shorthand %></td>
        <td><%= account.credit_shorthand %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>