<form class="form-inline" role="form">

<div class="form-group">
<select class="form-control">
	<option>From...</option>
	<option>Wallet</option>
	<option>AMEX</option>
</select>
</div>

<div class="form-group">
<select class="form-control">
	<option>To...</option>
	<option>Wallet</option>
	<option>AMEX</option>
</select>
</div>

</form>

<br /><br /><hr />
<fieldset>



	
	From: <%= transaction_form.collection_select(:debited_id, current_user.accounts.all, :id, :name) %>
	<%= transaction_form.label :custom_debit %>
	<%= transaction_form.text_field :custom_debit %>
	
	<%= transaction_form.label :amount %>
	<%= transaction_form.text_field :amount %>
	
	To: <%= transaction_form.collection_select(:credited_id, current_user.accounts.all, :id, :name) %>
	<%= transaction_form.label :custom_credit %>
	<%= transaction_form.text_field :custom_credit %>
	
	<br />
	<%= transaction_form.label :description %>
	<%= transaction_form.text_field :description %>
</fieldset>