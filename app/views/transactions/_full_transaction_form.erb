<div class="form-inline" id="full-transaction-form">

  <div class="form-group col-md-2">
    <%= transaction_form.collection_select(:debited_id, current_user.accounts.all, :id, :name, {:include_blank => 'From...'}, {:class => 'form-control'}) %>
  </div>

  <div class="form-group col-md-2">
    <%= transaction_form.text_field :custom_debit, :class => "form-control", :placeholder => "or custom 'From'..." %>
  </div>

  <div class="input-group col-md-2 ">
    <span class="input-group-addon"><span class="glyphicon glyphicon-usd"></span></span>
    <%= transaction_form.text_field :amount, :class => "form-control", :placeholder => "4.99" %>
  </div>

  <div class="form-group col-md-2">
    <%= transaction_form.collection_select(:credited_id, current_user.accounts.all, :id, :name, {:include_blank => 'To...'}, {:class => 'form-control'}) %>
  </div>

  <div class="form-group col-md-2">
    <%= transaction_form.text_field :custom_credit, :class => "form-control", :placeholder => "or custom 'To'..." %>
  </div>

  <div class="form-group col-md-2">
    <%= transaction_form.submit "Create Transaction", :class => "btn btn-success" %>
  </div>

  <div class="clearfix"></div>

</div>



